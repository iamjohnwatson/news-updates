# Frontend configuration (used by Vite during development)
VITE_GITHUB_OWNER=<github-org-or-user>
VITE_GITHUB_REPO=<repository-name>
VITE_WORKFLOW_FILE=register-newsletter.yml
VITE_DEFAULT_BRANCH=main

# Automation secrets (configure as GitHub Secrets in production)
# Base64-encoded 32-byte key used to encrypt email addresses in the registry.
NEWSLETTER_ENCRYPTION_KEY=<generated-base64-key>

# SMTP provider (SendGrid, Mailgun, Gmail with App Password, etc)
SMTP_HOST=<smtp-hostname>
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=<smtp-username>
SMTP_PASS=<smtp-password-or-api-key>
SMTP_FROM="Reuters Business Desk <briefings@reuters.com>"

# Optional overrides
DISPATCH_TIMEZONE=America/New_York
MAX_ARTICLES_PER_SOURCE=6
DISPATCH_WINDOW_MINUTES=20
DRY_RUN=false
